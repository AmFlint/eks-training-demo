-
  const navLinks = [
    {href: '/', title: 'Home'},
    {href: '/auth', title: 'Auth'},
    {href: '/service-mesh', title: 'Service Mesh'}
  ];


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>#{title}</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
  <header>
    <nav class="nav nav-pills">
      each navLink in navLinks
        if path === navLink.href
          <a class="nav-link active" aria-current="page" href="#{navLink.href}">#{navLink.title}</a>
        else
          <a class="nav-link" aria-current="page" href="#{navLink.href}">#{navLink.title}</a>

    </nav>
  </header>

  block content
</body>
</html>